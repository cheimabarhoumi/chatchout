# ChatChout Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/chatchout?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters_long
JWT_EXPIRE=7d

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Stream.io Video Calling Configuration
STREAM_API_KEY=your_stream_api_key_here
STREAM_API_SECRET=your_stream_api_secret_here

# Production URLs (for deployment)
# CLIENT_URL=https://your-frontend-domain.vercel.app
